<div class="page-header">
  <h1>
    Advocates
    <a href="/advocates/new" class="btn btn-lg btn-success">New Advocate</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @advocates.each do |advocate| %>
      <tr>
        <td><%= advocate.email %></td>
        <td><%= advocate.password %></td>
        <td>
          <a href="/advocates/<%= advocate.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

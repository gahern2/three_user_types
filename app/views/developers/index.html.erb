<div class="page-header">
  <h1>
    Developers
    <a href="/developers/new" class="btn btn-lg btn-success">New Developer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @developers.each do |developer| %>
      <tr>
        <td><%= developer.email %></td>
        <td><%= developer.password %></td>
        <td>
          <a href="/developers/<%= developer.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @developers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
